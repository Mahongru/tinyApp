<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/_head %>
</head>
<body>
  <header>
    <% include partials/_header %>
  </header>

  <h1> ShortUrl: <a href="/u/<%= url.id %>" target="_blank"> <%= url.id %> </a> </h1>

  <form action="/urls/<%= url.id %>?_method=PUT" method="POST">
    <div class="row">

      <div class="col-md-8">
        <input type="text" name="longUrl" class="form-control" value="<%= url.longUrl %>"/>
      </div>

      <div class="col-md-4">
        <button type="submit" class="btn btn-default">
          <span class="glyphicon glyphicon-ok"></span> Update
        </button>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 text-center">
        <p> Total visitors: <%= url.count %> </p>
        <p> Unique visitors: <%= url.uniqCount %> </p>
      </div>

    </div>
  </form>

  <h1> URL Tracking </h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td> Short Url </td>
        <td> Timestamp </td>
        <td> Vistor ID </td>
      </tr>
    </thead>

    <tbody>

    <% logs.forEach( function(log) { %>
      <tr>
        <td><%= log.id %> </td>
        <td><%= log.timestamp %> </td>
        <td><%= log.visitor_id %> </td>
      </tr>
    <% }); %>
    </tbody>





  </table>




</body>
</html>